<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/textResName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/textResNameHint"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/textResDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="@string/textResDateHint"
            android:inputType="date"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/textResTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="@string/textResTimeHint"
            android:inputType="time"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonResSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonReservation" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>