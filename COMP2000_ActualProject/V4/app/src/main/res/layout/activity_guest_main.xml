<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_guest_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonMainGuestMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonMainGuestMenu" />

        <Button
            android:id="@+id/buttonMainGuestBookings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonMainGuestBookings" />

        <Button
            android:id="@+id/buttonMainGuestNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonMainGuestNotifications" />

        <Button
            android:id="@+id/buttonMainGuestSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonMainGuestSettings" />

        <Button
            android:id="@+id/buttonMainGuestLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonMainGuestLogout" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>